<div class="container">
    <div class="main_paragraph">
        <h2>Login</h2>
        <form action="/login" method="post">
            <div class="success" id="success">
                <h4> {{messages.success}} </h4>
            </div>   
            <div class="error" id="error">
                <h4> {{messages.error}} </h4>
            </div> 
            <div class="paragraph">
                <p for="uniqueCode" class="details">Unique code: </p>
                <input type="text" class="name" placeholder="Enter unique code" name="code" autocomplete="off">
            </div>
            <button class="submitBtn" type="submit"> Login </button>
        </form>
        <div class="theExpenses">
            <a href="/">Show the Home Page</a>
        </div>
    </div>
</div>